extends layout

block body
  div(ng-controller='AppCtrl')
    span
      a.select-arrow(ng-click='click()', ng-class='{"arrow-slide":isOpened}')
        span.fa-stack.fa-2x
          i.fa.fa-square-o.fa-stack-2x
          i.fa.fa-stack-1x(ng-class='{"fa-chevron-left": isOpened, "fa-chevron-right": !isOpened}')
    .sidebar(ng-class='{"slide-out":isOpened}')
      .select-view(ng-repeat='item in items')
        a(change-new-game="#i{{$index}}")
          img(src='{{item.image}}', width='100', height="70")
      //- //- select-new-game.select-view
      //- .select-view(select-new-game)

    .container
      h2.text-center.title
        a(new-new-game="#") zoi
      .col-md-6.col-md-offset-3.panel-magin
        new-game
        new-game-amazon


